<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemHabitRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/habitName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habit Name"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/habitDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Habit description goes here"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/habitAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount: 0"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/habitTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time: Morning"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/habitCompleted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Completed Today" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</LinearLayout>
